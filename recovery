FROM node:16.10.0-alpine3.11 as build
WORKDIR /app
COPY . .


RUN npm install -g @angular/cli


RUN npm install
RUN ng build

FROM httpd:alpine3.15 as runtime

COPY --from=build /app/.htaccess /usr/local/apache2/htdocs/
COPY --from=build /app/dist/houseitemfront /usr/local/apache2/htdocs/

RUN ls /usr/local/apache2/htdocs/
